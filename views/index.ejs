<html>
<head>
  <title>Sound-wav.es</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>
<body>
  <h1>Sound-wav.es</h1>

  <input  id="tempo" type="range" min="40" max="240" step="1" value="<%= sequencer.tempo || 120 %>" />
  <button id="metronome-toggle">Toggle Metronome</button>
  <button id="play">Play</button>
  <button id="stop">Stop</button>
  <table>
    <tbody>
      <% var verticalNames = ['a', 'b', 'c', 'd'] %>
      <% for (var i=0; i < verticalNames.length; i++) { %>
        <tr>
          <% for (var j=0; j < 16; j++) { %>
            <% var gridRef = verticalNames[i] + j; %>
            <td id="<%= gridRef %>"<% if (sequencer[gridRef] && (sequencer[gridRef] == 1)) { %> class="active"<% } %>></td>
          <% } %>
        </tr>
      <% } %>
    </tbody>
  </table>

  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.js"></script>
  <script type="text/javascript" src="/javascripts/main.js"></script>
</body>
</html>
